{
	"name": "obsidian-claude-cli-chat",
	"version": "1.0.0",
	"description": "Chat with local Claude Code CLI directly from Obsidian. No API keys required - uses your local Claude installation for seamless vault integration.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --watchAll=false"
	},
	"keywords": ["obsidian", "claude", "cli", "local", "chat", "ai", "assistant", "no-api"],
	"author": "Claude Code Integration",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"jest": "^29.7.0",
		"@types/jest": "^29.5.8",
		"ts-jest": "^29.1.1",
		"jest-environment-jsdom": "^29.7.0",
		"@testing-library/jest-dom": "^6.1.5",
		"msw": "^2.0.11",
		"jest-html-reporters": "^3.1.7",
		"jest-junit": "^16.0.0",
		"identity-obj-proxy": "^3.0.0"
	},
	"dependencies": {}
}
